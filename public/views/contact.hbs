<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Contact - Oxygen Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/static/style.css" rel="stylesheet">
</head>
<body>

{{> partial/_navbar }}

<!-- Contact Page Content -->
<main class="container my-5 pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Page Header -->
            <div class="contact-header text-center mb-5">
                <h1 class="display-4 fw-bold text-primary mb-3">
                    <i class="bi bi-envelope me-3"></i>Get In Touch
                </h1>
                <p class="lead text-muted">Have a question or want to work together? I'd love to hear from you!</p>
            </div>

            <div class="row">
                <!-- Contact Form -->
                <div class="col-lg-8 mb-5">
                    <div class="contact-form-container">
                        <div class="card border-0 shadow-lg">
                            <div class="card-header bg-primary text-white">
                                <h3 class="card-title mb-0">
                                    <i class="bi bi-chat-dots me-2"></i>Send Message
                                </h3>
                            </div>
                            <div class="card-body p-4">
                                <form id="contactForm" enctype="multipart/form-data">
                                    <div class="row">
                                        <!-- Name Field -->
                                        <div class="col-md-6 mb-3">
                                            <label for="name" class="form-label">
                                                <i class="bi bi-person me-1"></i>Full Name *
                                            </label>
                                            <input type="text" class="form-control" id="name" name="name" required>
                                            <div class="invalid-feedback">
                                                Please provide a valid name.
                                            </div>
                                        </div>

                                        <!-- Email Field -->
                                        <div class="col-md-6 mb-3">
                                            <label for="email" class="form-label">
                                                <i class="bi bi-envelope me-1"></i>Email Address *
                                            </label>
                                            <input type="email" class="form-control" id="email" name="email" required>
                                            <div class="invalid-feedback">
                                                Please provide a valid email address.
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <!-- Subject Field -->
                                        <div class="col-md-6 mb-3">
                                            <label for="subject" class="form-label">
                                                <i class="bi bi-tag me-1"></i>Subject *
                                            </label>
                                            <select class="form-select" id="subject" name="subject" required>
                                                <option value="">Choose a subject</option>
                                                <option value="general">General Inquiry</option>
                                                <option value="collaboration">Collaboration</option>
                                                <option value="job">Job Opportunity</option>
                                                <option value="technical">Technical Question</option>
                                                <option value="other">Other</option>
                                            </select>
                                            <div class="invalid-feedback">
                                                Please select a subject.
                                            </div>
                                        </div>

                                        <!-- Priority Field -->
                                        <div class="col-md-6 mb-3">
                                            <label for="priority" class="form-label">
                                                <i class="bi bi-flag me-1"></i>Priority
                                            </label>
                                            <select class="form-select" id="priority" name="priority">
                                                <option value="low">Low</option>
                                                <option value="medium" selected>Medium</option>
                                                <option value="high">High</option>
                                                <option value="urgent">Urgent</option>
                                            </select>
                                        </div>
                                    </div>

                                    <!-- Message Field -->
                                    <div class="mb-3">
                                        <label for="message" class="form-label">
                                            <i class="bi bi-chat-text me-1"></i>Message *
                                        </label>
                                        <textarea class="form-control" id="message" name="message" rows="6" 
                                                  placeholder="Tell me about your project or question..." required></textarea>
                                        <div class="invalid-feedback">
                                            Please provide a message.
                                        </div>
                                        <div class="form-text">
                                            <span id="charCount">0</span> / 1000 characters
                                        </div>
                                    </div>

                                    <!-- File Upload -->
                                    <div class="mb-3">
                                        <label for="attachment" class="form-label">
                                            <i class="bi bi-paperclip me-1"></i>Attachment (Optional)
                                        </label>
                                        <input type="file" class="form-control" id="attachment" name="attachment" 
                                               accept=".pdf,.doc,.docx,.txt,.jpg,.jpeg,.png,.gif">
                                        <div class="form-text">
                                            Supported formats: PDF, DOC, DOCX, TXT, JPG, PNG, GIF (Max 10MB)
                                        </div>
                                    </div>

                                    <!-- CAPTCHA -->
                                    <div class="mb-4">
                                        <label class="form-label">
                                            <i class="bi bi-shield-check me-1"></i>Security Verification *
                                        </label>
                                        <div class="captcha-container">
                                            <div class="captcha-challenge">
                                                <canvas id="captchaCanvas" width="200" height="60"></canvas>
                                                <button type="button" class="btn btn-outline-secondary btn-sm" id="refreshCaptcha">
                                                    <i class="bi bi-arrow-clockwise"></i>
                                                </button>
                                            </div>
                                            <input type="text" class="form-control mt-2" id="captchaInput" 
                                                   placeholder="Enter the code above" required>
                                            <div class="invalid-feedback">
                                                Please enter the correct verification code.
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Submit Button -->
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                                            <i class="bi bi-send me-2"></i>Send Message
                                        </button>
                                    </div>
                                </form>

                                <!-- Success/Error Messages -->
                                <div id="formMessages" class="mt-3" style="display: none;">
                                    <div class="alert alert-success" id="successMessage" style="display: none;">
                                        <i class="bi bi-check-circle me-2"></i>
                                        <span id="successText"></span>
                                    </div>
                                    <div class="alert alert-danger" id="errorMessage" style="display: none;">
                                        <i class="bi bi-exclamation-triangle me-2"></i>
                                        <span id="errorText"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="col-lg-4">
                    <div class="contact-info-sidebar">
                        <!-- Contact Details -->
                        <div class="card border-0 shadow-lg mb-4">
                            <div class="card-header bg-info text-white">
                                <h4 class="card-title mb-0">
                                    <i class="bi bi-info-circle me-2"></i>Contact Info
                                </h4>
                            </div>
                            <div class="card-body">
                                <div class="contact-item mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-envelope-fill text-primary me-3 fs-5"></i>
                                        <div>
                                            <strong>Email</strong><br>
                                            <a href="mailto:dmitry.osin@example.com" class="text-decoration-none">
                                                dmitry.osin@example.com
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="contact-item mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-telephone-fill text-primary me-3 fs-5"></i>
                                        <div>
                                            <strong>Phone</strong><br>
                                            <a href="tel:+1234567890" class="text-decoration-none">
                                                +1 (234) 567-890
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="contact-item mb-3">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-geo-alt-fill text-primary me-3 fs-5"></i>
                                        <div>
                                            <strong>Location</strong><br>
                                            <span class="text-muted">Remote / Global</span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="contact-item">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-clock-fill text-primary me-3 fs-5"></i>
                                        <div>
                                            <strong>Response Time</strong><br>
                                            <span class="text-muted">Within 24 hours</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Social Links -->
                        <div class="card border-0 shadow-lg mb-4">
                            <div class="card-header bg-success text-white">
                                <h4 class="card-title mb-0">
                                    <i class="bi bi-share me-2"></i>Follow Me
                                </h4>
                            </div>
                            <div class="card-body">
                                <div class="social-links">
                                    <a href="https://github.com" class="btn btn-outline-dark w-100 mb-2" target="_blank">
                                        <i class="bi bi-github me-2"></i>GitHub
                                    </a>
                                    <a href="https://linkedin.com" class="btn btn-outline-primary w-100 mb-2" target="_blank">
                                        <i class="bi bi-linkedin me-2"></i>LinkedIn
                                    </a>
                                    <a href="https://twitter.com" class="btn btn-outline-info w-100 mb-2" target="_blank">
                                        <i class="bi bi-twitter me-2"></i>Twitter
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- FAQ -->
                        <div class="card border-0 shadow-lg">
                            <div class="card-header bg-warning text-dark">
                                <h4 class="card-title mb-0">
                                    <i class="bi bi-question-circle me-2"></i>Quick FAQ
                                </h4>
                            </div>
                            <div class="card-body">
                                <div class="accordion" id="faqAccordion">
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed" type="button" 
                                                    data-bs-toggle="collapse" data-bs-target="#faq1">
                                                How quickly do you respond?
                                            </button>
                                        </h2>
                                        <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                            <div class="accordion-body">
                                                I typically respond to all inquiries within 24 hours during business days.
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed" type="button" 
                                                    data-bs-toggle="collapse" data-bs-target="#faq2">
                                                What file types can I attach?
                                            </button>
                                        </h2>
                                        <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                            <div class="accordion-body">
                                                You can attach PDF, DOC, DOCX, TXT, JPG, PNG, and GIF files up to 10MB.
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed" type="button" 
                                                    data-bs-toggle="collapse" data-bs-target="#faq3">
                                                Do you offer consulting services?
                                            </button>
                                        </h2>
                                        <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                            <div class="accordion-body">
                                                Yes! I offer consulting services for Java, Go, Spring Framework, and system architecture.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

{{> partial/_footer }}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Set current year
        const currentYearElement = document.getElementById('currentYear');
        if (currentYearElement) {
            currentYearElement.textContent = new Date().getFullYear();
        }

        // Character counter for message
        const messageTextarea = document.getElementById('message');
        const charCount = document.getElementById('charCount');
        const maxLength = 1000;

        messageTextarea.addEventListener('input', function() {
            const length = this.value.length;
            charCount.textContent = length;
            
            if (length > maxLength) {
                charCount.classList.add('text-danger');
                this.classList.add('is-invalid');
            } else {
                charCount.classList.remove('text-danger');
                this.classList.remove('is-invalid');
            }
        });

        // CAPTCHA implementation
        let captchaCode = '';
        const canvas = document.getElementById('captchaCanvas');
        const ctx = canvas.getContext('2d');
        const captchaInput = document.getElementById('captchaInput');

        function generateCaptcha() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            // Generate random 5-character code
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
            captchaCode = '';
            for (let i = 0; i < 5; i++) {
                captchaCode += chars.charAt(Math.floor(Math.random() * chars.length));
            }

            // Draw background
            ctx.fillStyle = '#f8f9fa';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            // Draw random lines
            for (let i = 0; i < 5; i++) {
                ctx.strokeStyle = `rgba(${Math.random() * 255}, ${Math.random() * 255}, ${Math.random() * 255}, 0.3)`;
                ctx.beginPath();
                ctx.moveTo(Math.random() * canvas.width, Math.random() * canvas.height);
                ctx.lineTo(Math.random() * canvas.width, Math.random() * canvas.height);
                ctx.stroke();
            }

            // Draw text
            ctx.font = 'bold 24px Arial';
            ctx.fillStyle = '#007bff';
            ctx.textAlign = 'center';
            ctx.textBaseline = 'middle';
            
            // Add some distortion
            for (let i = 0; i < captchaCode.length; i++) {
                const x = (canvas.width / 6) * (i + 1);
                const y = canvas.height / 2 + (Math.random() - 0.5) * 10;
                const angle = (Math.random() - 0.5) * 0.5;
                
                ctx.save();
                ctx.translate(x, y);
                ctx.rotate(angle);
                ctx.fillText(captchaCode[i], 0, 0);
                ctx.restore();
            }
        }

        // Generate initial CAPTCHA
        generateCaptcha();

        // Refresh CAPTCHA button
        document.getElementById('refreshCaptcha').addEventListener('click', generateCaptcha);

        // Form validation and submission
        const form = document.getElementById('contactForm');
        const submitBtn = document.getElementById('submitBtn');

        form.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Clear previous validation
            form.classList.remove('was-validated');
            document.querySelectorAll('.is-invalid').forEach(el => el.classList.remove('is-invalid'));
            hideMessages();

            // Validate CAPTCHA
            if (captchaInput.value.toUpperCase() !== captchaCode) {
                captchaInput.classList.add('is-invalid');
                showError('Please enter the correct verification code.');
                return;
            }

            // Validate form
            if (!form.checkValidity()) {
                form.classList.add('was-validated');
                return;
            }

            // Show loading state
            submitBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Sending...';
            submitBtn.disabled = true;

            // Simulate form submission (replace with actual AJAX call)
            setTimeout(() => {
                showSuccess('Thank you for your message! I\'ll get back to you within 24 hours.');
                form.reset();
                generateCaptcha();
                form.classList.remove('was-validated');
                
                submitBtn.innerHTML = '<i class="bi bi-send me-2"></i>Send Message';
                submitBtn.disabled = false;
            }, 2000);
        });

        function showSuccess(message) {
            hideMessages();
            document.getElementById('successText').textContent = message;
            document.getElementById('successMessage').style.display = 'block';
            document.getElementById('formMessages').style.display = 'block';
        }

        function showError(message) {
            hideMessages();
            document.getElementById('errorText').textContent = message;
            document.getElementById('errorMessage').style.display = 'block';
            document.getElementById('formMessages').style.display = 'block';
        }

        function hideMessages() {
            document.getElementById('successMessage').style.display = 'none';
            document.getElementById('errorMessage').style.display = 'none';
        }
    });
</script>
</body>
</html>
